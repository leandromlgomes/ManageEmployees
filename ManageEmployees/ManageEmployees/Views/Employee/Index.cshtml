@model Domain.ViewModels.Employee.EmployeeViewModel
@{
    ViewData["Title"] = "Funcionários";
}
<div class="row" style="padding-bottom:10px">
    <div class="col-md-10"><h4>@ViewData["Title"]</h4></div>
    <div class="col-md-2" style="vertical-align:inherit"><a class="btn btn-primary btn-sm" asp-controller="Employee" asp-action="create">Cadastrar Funcionário</a></div>
</div>

<table class="table table-striped table-bordered" id="tbResult" style="width:100%;">
    <thead>
        <tr>
            <th>@Html.DisplayName("Id")</th>
            <th>@Html.DisplayName("Nome")</th>
            <th>@Html.DisplayName("Telefone")</th>
            <th>@Html.DisplayName("Email")</th>
            <th> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <div class="row">
                        <div style="padding-left:10px"> <a class="btn btn-warning btn-sm" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id">Editar</a> </div>
                        <div style="padding-left:4px">  <a class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Excluir</a> </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">$('#tbResult').DataTable({
            responsive: true,
            fixedHeader: true,
            order: [],
            searching: true
        });</script>
}